<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pongs_000.projectsky.Contact">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:selectableItemBackground"
            app:cardUseCompatPadding="false"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ติดต่อเรา"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/sskrulogo"
                    android:id="@+id/sskrulogo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="นางสาวปริยาภรณ์ หงษ์สนิท "
                    android:id="@+id/tv1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/call1"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/ic_call"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tel1"
                        android:textColor="#6745ff"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="090 035 9820 "
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/mail1"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/ic_email"
                        android:layout_gravity="center_vertical" />


                    <TextView
                        android:id="@+id/email1"
                        android:padding="5dp"
                        android:textColor="#6745ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pariyapron.frame@gmail.com"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="นางสาวเครือฟ้า ธรรมรส"
                    android:id="@+id/tv2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/call2"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/ic_call"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/tel2"
                        android:padding="5dp"
                        android:textColor="#6745ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="090 836 0273"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/mail2"
                        android:layout_marginLeft="15sp"
                        android:background="@drawable/ic_email"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/email2"
                        android:padding="5dp"
                        android:textColor="#6745ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="skyguyguy28@gmail.com"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="0dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สาขาวิชาเทคโนโลยีสารสนเทศ  มหาวิทยาลัยราชภัฏศรีสะเกษ"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
